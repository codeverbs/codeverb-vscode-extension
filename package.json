{
	"name": "codeverbs",
	"displayName": "CodeVerb",
	"description": "",
	"version": "0.0.1",
	"icon": "./assets/codeverb_logo.jpg",
	"repository": {
		"type": "git",
		"url": "https://github.com/codeverbs/codeverb-vscode-extension"
	},
	"engines": {
		"vscode": "^1.77.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			
		],
		"viewsContainers": {
			"activitybar": [
			  {
				"id": "codeverb-sidebar",
				"title": "CodeVerb",
				"icon": "./assets/codeverb_logo_nobg.png"
			  }
			]
		  },
		"views": {
			"codeverb-sidebar": [
			  {
				"type": "webview",
				"id": "codeverb-algo-to-code",
				"name": "Algorithm To Code"
			  }
			]
		},
		"icons": {
			"codeverb-logo": {
				"description": "CodeVerb Logo",
				"default": {
				"fontPath": "./assets/codeverb_icon.woff",
				"fontCharacter": "\\E001"
				}
			}
		},
		"keybindings": [
			{
				"command": "codeverbs.command-mode-convert",
				"key": "Shift+C",
				"mac": "Shift+C",
				"when": "editorFocus && !editorReadonly"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^8.1.0",
		"@types/mocha": "^10.0.1",
		"@types/node": "16.x",
		"@types/vscode": "^1.77.0",
		"@typescript-eslint/eslint-plugin": "^5.56.0",
		"@typescript-eslint/parser": "^5.56.0",
		"@vscode/test-electron": "^2.3.0",
		"eslint": "^8.36.0",
		"glob": "^8.1.0",
		"mocha": "^10.2.0",
		"ts-loader": "^9.4.2",
		"typescript": "^4.9.5",
		"webpack": "^5.76.3",
		"webpack-cli": "^5.0.1"
	},
	"dependencies": {
		"@vscode/webview-ui-toolkit": "^1.2.2",
		"axios": "^1.3.5"
	}
}
